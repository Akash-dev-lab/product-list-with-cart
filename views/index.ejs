<% include partials/header.ejs %>
<div class="p-14">
  <div class="container flex justify-between gap-10">
  <div class="grid">
    <!-- Desserts Section -->
     <div class="grid grid-rows-[50px] items-center">
    <h1 class="text-3xl text-rose-900 font-bold">Desserts</h1>
  </div>

      <!-- Dessert Card -->
      <div class="bg-white rounded-lg mt-6 shadow-md relative border-none gap-4 grid grid-cols-3">
        <% items.forEach(item => { %>
        <div class="menu-item grid-cols-3">
          <picture>
            <source
              media="(min-width: 1024px)"
              srcset="<%= item.image.desktop %>"
            />
            <source
              media="(max-width: 768px)"
              srcset="<%= item.image.tablet %>"
            />
            <source
              media="(max-width: 480px)"
              srcset="<%= item.image.mobile %>"
            />
            <img class="rounded-lg" src="<%= item.image.thumbnail %>" alt="<%= item.name %>" />
          </picture>

          <a href="<%= item.button.url || '#' %>" class="<%= item.button.style || '' %>">
            <%- item.button.svg %>  <!-- Render the SVG icon -->
            <%= item.button.text %>
          </a>

          <div class="mt-10 p-2">
            <p class="font-medium"><%= item.category %></p>
            <h2 class="font-bold text-rose-900"><%= item.name %></h2>
            <p class="text-red-600 font-semibold">$<%= item.price.toFixed(2) %></p>
          </div>
        </div>
        <% }); %>
      </div>

    <!-- Cart Section (on the right side for larger screens) -->
  </div>
  <div class="mt-8 lg:mt-16 lg:w-1/3">
    <div class="bg-white rounded-lg shadow-lg p-4">
      <h2 class="text-2xl font-bold mb-4">Your Cart (7)</h2>
      <!-- Cart Items -->
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <p class="font-bold">Classic Tiramisu</p>
          <span class="text-gray-600">$5.50</span>
        </div>
        <!-- More cart items... -->
      </div>
      <div class="mt-6">
        <p class="font-bold text-xl">Order Total: $46.50</p>
        <button
          class="mt-4 bg-orange-500 text-white py-2 px-4 w-full rounded-lg"
        >
          Confirm Order
        </button>
      </div>
    </div>
  </div>
</div>

